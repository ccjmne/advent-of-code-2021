  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      // "program": "${workspaceFolder}\\dist\\run.js",
      "args": [
        "--no-warnings",
        "--experimental-specifier-resolution=node",
        "--loader",
        "./tools/loader.js",
        "run.ts",
        "--watch",
        "--",
        "--day",
        "22"
      ],
      // "args": ["--day", "22"],
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
